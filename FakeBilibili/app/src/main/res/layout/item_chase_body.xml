<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_title_chase_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:drawableLeft="@mipmap/ic_launcher"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:drawableRight="@mipmap/icon_right_arrow"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_bean_chase_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title_chase_body">
        <ImageView
            android:id="@+id/iv_first_chase_body"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/banma"/>
        <ImageView
            android:id="@+id/iv_second_chase_body"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/banma"/>
        <ImageView
            android:id="@+id/iv_thrid_chase_body"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/banma"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_name_chase_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_bean_chase_body">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="内容"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="内容"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="内容"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_update_chase_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_name_chase_body">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="内容"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="内容"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="内容"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_ad_chase_body"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@mipmap/banma"
        android:layout_below="@id/ll_update_chase_body"/>
    <TextView
        android:id="@+id/tv_ad_name_chase_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广告名字"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/iv_ad_chase_body"/>
    <TextView
        android:id="@+id/tv_ad_content_chase_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广告内容"
        android:layout_below="@id/tv_ad_name_chase_body"/>
</RelativeLayout>