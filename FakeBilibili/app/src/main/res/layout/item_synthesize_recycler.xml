<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">
    android:orientation="vertical"

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_synthesize"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:padding="2dp"
            android:drawableLeft="@mipmap/play"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:id="@+id/tv_synthesize_play_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="80dp"
            android:text="播放几次" />
        <TextView
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:id="@+id/tv_synthesize_play_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="80dp"
            android:text="时间" />

        <TextView
            android:id="@+id/tv_synthesize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_synthesize"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:maxEms="9"
            android:maxLines="2"
            android:text="文字"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_synthesize_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>