<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="horizontal">

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/backblack"
        android:id="@+id/iv_back_search_home_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/qrcode"
        android:id="@+id/iv_qr_code_search_home_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:background="@null"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/et_search_home_page"
        android:layout_width="230dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/search"
        android:id="@+id/iv_search_home_page_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>