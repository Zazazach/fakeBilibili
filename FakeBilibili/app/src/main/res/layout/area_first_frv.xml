<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="15dp"
    >

    <ImageView
        android:id="@+id/iv_frv_logo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/tv"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_frv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动画区"
        android:textSize="12sp"
        android:layout_toRightOf="@id/iv_frv_logo"
        android:layout_alignTop="@id/iv_frv_logo"
        android:paddingBottom="2dp"

        android:gravity="center"

        android:layout_marginLeft="9dp"/>

    <Button
        android:layout_width="68dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:text="进去看看"
        android:textSize="9sp"
        android:textColor="#ffff"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_frv"
        android:layout_below="@id/iv_frv_logo"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


   <Button
       android:id="@+id/btn_frv"
       android:layout_width="90dp"
       android:layout_height="30dp"
       android:layout_below="@id/rv_frv"
       android:layout_alignLeft="@id/rv_frv"
       android:layout_marginTop="10dp"
       android:background="#FFFF"
       android:text="更多音乐"
       android:textSize="10sp"/>



    <ImageView
        android:id="@+id/iv_frv_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/refresh"
        android:layout_alignTop="@id/btn_frv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_frv_refresh"
        android:text="40729条新动态,点击刷新!"
        android:textSize="9sp"
        android:layout_alignTop="@id/btn_frv"
        android:paddingTop="7dp"/>


    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@id/btn_frv"
        android:layout_marginTop="15dp"

        ></com.youth.banner.Banner>
</RelativeLayout>