<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:layout_margin="9dp">

    <lanou.com.fakebilibili.area.view.CircleImageView
        android:id="@+id/iv_icon_detail_left"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/tv_name_detail_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_icon_detail_left"
        android:text="夏子夜p"
        android:textSize="13sp"
        android:textColor="#111111"
        android:layout_toRightOf="@id/iv_icon_detail_left"
        android:paddingTop="5dp"/>

    <TextView
        android:id="@+id/tv_his_detail_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_icon_detail_left"
        android:text="2天前投递"
        android:textSize="10sp"
        android:layout_toRightOf="@id/iv_icon_detail_left"
        android:paddingBottom="5dp"/>


    <CheckBox
        android:layout_width="30dp"
        android:layout_height="22dp"
        android:drawableStart="@mipmap/guanzhu"
        android:button="@null"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/iv_icon_detail_left"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:scaleX="1.5"
        android:scaleY="1.1"/>


    <LinearLayout
        android:id="@+id/after_detail_left"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/iv_icon_detail_left"
        android:layout_marginTop="15dp"
        android:background="#ffff"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/bettery"/>


            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/bettery"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/bettery"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/bettery"/>

        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="收起"
        android:textSize="50sp"
        android:textColor="#f88"
        android:gravity="bottom"
        />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/before_detail_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_icon_detail_left"
        android:layout_marginTop="15dp"
        android:background="#ffff"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充电"
            android:textColor="#f88"
            android:layout_gravity="center"/>
    </LinearLayout>

</RelativeLayout>